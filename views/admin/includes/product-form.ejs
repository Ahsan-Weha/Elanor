<form action="/admin/products/new" method="post" enctype="multipart/form-data">
    <p>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" required>
    </p>
    <div id="image-upload-control">
        <p>
            <label for="image">Image</label>
            <input type="file" id="image" name="image" accept="image/png,image/jpg" required>
        </p>
        <img src="" alt="your picked Image">
    </div>
    <p>
        <label for="summary">Summary</label>
        <input type="text" id="summary" name="summary" maxlength="250" required>
    </p>
    <p>
        <label for="price">Price</label>
        <input type="number" id="price" name="price" required min=" 0.01" step="0.01">
    </p>
    <p>
        <label for="description">Description</label>
        <textarea name="description" id="description" rows="7" required></textarea>
    </p>
    <p>
        <button id="btn-alt" type="reset">Reset</button>
        <button id="btn-alt" type="submit">Save</button>
    </p>
</form>