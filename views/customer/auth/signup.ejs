<%- include('../../shared/includes/head.ejs', {pageTitle: 'Signup - Elanor' }) %>
    <link rel="stylesheet" href="styles/form.css">

    </head>

    <body>
        <%- include('../../shared/includes/header.ejs') %>
            <main>
                <h2>Create New Account</h2>

                <% if(inputData.errorMessage){ %> 
                    <section class="alert">
                        <h2>Invalid</h2>
                        <p>
                            <%= inputData.errorMessage %>
                        </p>
                    </section>
                    <% } %>

                        <form action="/signup" method="post">
                            <p>
                                <label for="name">Full Name</label>
                                <input type="text" id="name" name="name" value="<%= inputData.name %>" required>
                            </p>
                            <p>
                                <label for=" address">Address</label>
                                <input type="text" id="address" name="address" value="<%= inputData.address %>"
                                    required>
                            </p>
                            <p>
                                <label for="city">City</label>
                                <input type="text" id="city" name="city" value="<%= inputData.city %>" required>
                            </p>
                            <p>
                                <label for="postal">Postal Code</label>
                                <input type="text" id="postal" name="postal" minlength="5" maxlength="5"
                                    value="<%= inputData.postal %>" required>
                            </p>
                            <hr>
                            <p>
                                <label for="email">Email</label>
                                <input type="email" name="email" id="email" value="<%= inputData.email %>" required>
                            </p>
                            <p>
                                <label for="number">Phone Number</label>
                                <input type="tel" name="number" id="number" value="<%= inputData.number %>"
                                  minlength="11" maxlength="13">
                            </p>
                            <p>
                                <label for="password">Password</label>
                                <input type="password" id="password" name="password" minlength="6"
                                    value="<%= inputData.password %>" required>
                            </p>
                            <p>
                                <label for="confirmPassword">Confirm Password</label>
                                <input type="password" name="confirmPassword" id="confirmPassword" minlength="6"
                                    value="<%= inputData.confirmPassword %>" required>
                            </p>

                            <button id="btn-alt">Create Account</button>
                            <p><a href="/login">Login Instead </a></p>
                        </form>


            </main>





            <%- include('../../shared/includes/footer.ejs') %>